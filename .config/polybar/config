[module/network]
	type = internal/network
	interface = wlan0
	
	interval = 1.0

	accumulate-stats = true

	unknown-as-up = true
	label-underline = ${xrdb:color10}
	format-connected = <ramp-signal> <label-connected>
	format-connected-underline = ${xrdb:color10}
	format-connected-margin = 2
	format-disconnected-margin = 2
	format-disconnected = <label-disconnected>
	format-disconnected-prefix = " "
	format-disconnected-prefix-foreground = ${xrdb:foreground}
	format-disconnected-underline = ${xrdb:color9}

	label-connected = "%essid%  %downspeed%"
	label-disconnected = Disconnected

	ramp-signal-0 = 
	ramp-signal-1 = 
	ramp-signal-2 = 
	ramp-signal-3 = 
	ramp-signal-4 = 
	ramp-signal-foreground = ${xrdb:foreground}

[module/temperature]
	type = internal/temperature
	interval = 0.5

	thermal-zone = 0

	hwmon-path = /sys/devices/platform/coretemp.0/hwmon/hwmon7/temp1_input

	base-temperature = 20
	warn-temperature = 60
	units = false

	format = <label>
	format-underline = ${xrdb:color14}
	format-margin = 2
	format-warn = <label-warn>
	format-warn-underline = ${xrdb:color9}
	format-warn-margin = 2

	label = " %temperature-c%"
	label-warn =" %temperature-c%"
	label-warn-foreground = ${xrdb:foreground}


[module/memory]
	type = internal/memory

	interval = 3
	format = <label>

	; Available tokens:
	;   %percentage_used% (default)
	;   %percentage_free%
	;   %gb_used%
	;   %gb_free%
	;   %gb_total%
	;   %mb_used%
	;   %mb_free%
	;   %mb_total%
	;   %percentage_swap_used%
	;   %percentage_swap_free%
	;   %mb_swap_total%
	;   %mb_swap_free%
	;   %mb_swap_used%
	;   %gb_swap_total%
	;   %gb_swap_free%
	;   %gb_swap_used%

	label = " %gb_used%"
	label-margin = 2
	label-underline = ${xrdb:color15}

[module/previous]
	type = custom/script
	interval = 86400
	format = "%{T3}<label>"
	format-padding = 5
	; Previous song icon
	exec = echo ""
	; Check if spotify is running before displaying the icon
	exec-if = "pgrep spotify"
	format-underline = #1db954
	line-size = 3
	click-left = "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Previous"

[module/next]
	type = custom/script
	interval = 86400
	format = "%{T3}<label>"
	format-padding = 5
	; Next song icon
	exec = echo ""
	; Check if spotify is running before displaying the icon
	exec-if = "pgrep spotify"
	format-underline = #1db954
	line-size = 3
	click-left = "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Next"

[module/playpause]
	type = custom/ipc
	; Default
	; Default (no symbol)
	hook-0 = echo ""
	; Playing (pause symbol)
	hook-1 = echo ""
	; Paused (play symbol)
	hook-2 = echo ""
	initial = 1
	format-underline = #1db954
	line-size = 3
	click-left = "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.PlayPause"

[module/spotify]
	type = custom/ipc
	hook-0 = echo ""
	hook-1 = python3 ~/.config/polybar/script/spotify/spotify_status.py
	initial = 1
	format-padding = 4
	format-underline = #1db954
	line-size = 3
	; [i3wm only] - Uncomment the below line to focus on Spotify when clicking on the song name (credits to https://github.com/Esya)
	click-left = i3-msg '[class="Spotify"] focus'