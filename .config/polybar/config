[bar/top]
	dpi      = 192
	width    = 100%
	height   = 32
	offset-x = 0
	offset-y = 0

	bottom = false
	;wm-restack = i3

	background = ${xrdb:background}
	foreground = ${xrdb:foreground}
	enable-ipc = true
	
	border-bottom-size  = 0
	border-top-size     = 0
	border-left-size  = 0
	border-right-size = 0

	border-bottom-color = #0f0f0f
	border-top-color    = #0f0f0f

	border-left-color  = #0f0f0f
	border-right-color = #0f0f0f


	spacing            = 0
	padding-left       = 3
	padding-right      = 3
	module-margin-left = 0
	line-size = 3

	tray-position = right
	tray-padding = 2
	tray-detached = false
	tray-maxsize = 22
	tray-background = ${xrdb:background}
	tray-offset-x = 0
	tray-offset-y = 0
	;tray-padding = 0
	tray-scale = 1.0
	

	font-0 = NotoSans-Regular:size=5;0
	font-1 = FontAwesome5Free:style=Solid:size=6;2
	font-2 = FontAwesome5Free:style=Regular:size=6;2
	font-3 = FontAwesome5Brands:style=Regular:size=6;2


	modules-left = i3
	modules-center = spotify previous playpause next
	modules-right = memory temperature volume date network battery

